<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/erase_account_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="erase account" />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/erase_account_button"
        android:layout_alignLeft="@+id/erase_account_button"
        android:layout_alignStart="@+id/erase_account_button"
        android:layout_marginBottom="28dp"
        android:text="Log out" />
</RelativeLayout>